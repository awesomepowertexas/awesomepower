generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(uuid()) @db.Uuid
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  name           String?
  email          String   @unique
  hashedPassword String?
  role           String   @default("USER")

  tokens   Token[]
  sessions Session[]
}

model Session {
  id                 String    @id @default(uuid()) @db.Uuid
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  expiresAt          DateTime?
  handle             String    @unique
  hashedSessionToken String?
  antiCSRFToken      String?
  publicData         String?
  privateData        String?

  user   User?   @relation(fields: [userId], references: [id])
  userId String? @db.Uuid
}

model Token {
  id          String    @id @default(uuid()) @db.Uuid
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  hashedToken String
  type        TokenType
  expiresAt   DateTime
  sentTo      String

  user   User   @relation(fields: [userId], references: [id])
  userId String @db.Uuid

  @@unique([hashedToken, type])
}

enum TokenType {
  RESET_PASSWORD
}

model Tdu {
  id        String    @id @default(uuid()) @db.Uuid
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  name      String    @unique
  ptcName   String    @unique
  charges   Decimal[] @db.Decimal(4, 2)
  rates     Decimal[] @db.Decimal(6, 6)

  plans Plan[]
}

model Provider {
  id        String   @id @default(uuid()) @db.Uuid
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String   @unique
  ptcName   String   @unique
  isActive  Boolean  @default(true)
  rating    Int?     @default(-1)

  plans Plan[]
}

enum PlanRateType {
  Variable
  Fixed
  Indexed
}

enum PlanLanguage {
  English
  Spanish
}

model Plan {
  id                   String       @id @default(uuid()) @db.Uuid
  createdAt            DateTime     @default(now())
  updatedAt            DateTime     @updatedAt
  name                 String
  isActive             Boolean      @default(true)
  ptcIdKey             Int          @unique
  eflNumbers           Decimal[]    @db.Decimal(10, 6)
  chargeFunction       Json[]
  rateFunction         Json[]
  lowUsageRate         Decimal?     @db.Decimal(4, 4)
  midUsageRate         Decimal?     @db.Decimal(4, 4)
  highUsageRate        Decimal?     @db.Decimal(4, 4)
  kwh500               Decimal      @db.Decimal(3, 3)
  kwh1000              Decimal      @db.Decimal(3, 3)
  kwh2000              Decimal      @db.Decimal(3, 3)
  rateType             PlanRateType
  isPrepaid            Boolean
  isTimeOfUse          Boolean
  isPromotion          Boolean
  promotionDescription String
  isNewCustomer        Boolean
  percentRenewable     Int
  term                 Int
  cancellationFee      String
  language             PlanLanguage
  termsUrl             String       @db.VarChar(500)
  factsUrl             String       @db.VarChar(500)
  enrollUrl            String       @db.VarChar(500)
  enrollPhone          String

  tdu        Tdu      @relation(fields: [tduId], references: [id])
  tduId      String   @db.Uuid
  provider   Provider @relation(fields: [providerId], references: [id])
  providerId String   @db.Uuid
}
